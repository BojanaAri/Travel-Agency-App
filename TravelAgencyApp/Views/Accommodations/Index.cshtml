@model IEnumerable<TravelAgency.Domain.DomainModels.Accommodation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 style="color: #314354; font-weight: 500">Index</h1>

<p>
    @if (User.IsInRole("Admin")) {
        <a asp-action="Create">Create New</a>
    }

</p>
<table class="table" style="color: #314354;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.accommodationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerNight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxNumberOfRooms)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.accommodationType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerNight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxNumberOfRooms)
                </td>
                <td style="color:#314354;">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    |
                    @if (User.IsInRole("Admin"))
                    {
                        
                        < a asp - action = "Delete" asp - route - id = "@item.Id" > Delete </ a > }
                </td>
        </tr>
}
    </tbody>
</table>
