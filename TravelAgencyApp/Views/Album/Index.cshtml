@model List<TravelAgency.Domain.DTO.AlbumArtistDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 style="color:white;
    width: fit-content;
    display: inline-block;
    margin: 0px 30px 0 0;">
    Albums
</h1>


<div class="row row-cols-1 row-cols-md-3 g-2">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card w-100 border-0" style="width: 23rem; height:100%; border-top-left-radius: 12px; border-top-right-radius: 12px;">
                <img class="card-img-top" src="@item.ArtistImage" style="width:100%; height: 200px; object-fit: cover; border-top-left-radius: 12px; border-top-right-radius: 12px;" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text mt-3">@item.Name</p>

                    @foreach (var album in item.Albums)
                    {
                        <div class="album-card d-flex align-items-center gap-3 p-2 border rounded">
                            <img src="@album.CoverImage" alt="@album.Title Cover" class="album-cover rounded" />
                            <div>
                                <h6 class="mb-1 fw-bold">@album.Title</h6>
                                <p class="text-muted mb-1">@album.Genre</p>
                                <p class="small text-secondary">@album.Details</p>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    }
</div>
